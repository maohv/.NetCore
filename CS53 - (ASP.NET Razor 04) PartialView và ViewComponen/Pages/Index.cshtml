@page
@using XTLAB
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["titleMessage"] = "San pham moi";
    ViewData["content"] = "Ban dang xem cac san pham moi";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@await Html.PartialAsync("_Message")
@{
    var product1 = new Product(){Name = "Iphone", Description = "Dien thoai iphone cua Apple...", Price = 1000};
    var product2 = new Product(){Name = "SamSung", Description = "Dien thoai cua SamSung...", Price = 800};
    var product3 = new Product(){Name = "Nokia", Description = "Dien thoai cua Nokia...", Price = 500};
}

<div class="row bg-warning">
    <div class="col">
        <partial name="_ProductItem" model="product1"/>
    </div>
     <div class="col">
        @await Html.PartialAsync("_ProductItem", product2)
    </div>
     <div class="col">
        @{
            await Html.RenderPartialAsync("_ProductItem", product3);
        }
    </div>
</div>


<div class="row bg-info">
    @{
    var products = new List<Product>(){
        new Product(){Name = "SP1", Description = "Mo Ta SP1", Price= 1000},
        new Product(){Name = "SP2", Description = "Mo Ta SP2", Price= 1000},
        new Product(){Name = "SP3", Description = "Mo Ta SP3", Price= 1000},
        new Product(){Name = "SP4", Description = "Mo Ta SP4", Price= 1000}
        };

        foreach (var product in products)
        {
            <div class="col">
                 <partial name="_ProductItem" model="product"/>
            </div>
        }
}

</div>

@* Conponent *@
@await Component.InvokeAsync("ProductBox")