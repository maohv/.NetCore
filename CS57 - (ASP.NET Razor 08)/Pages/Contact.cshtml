@page
@model ContactModel
@{
}

<h1>Liên hệ</h1>

<form method="post" asp-page="Contact" class="m-2 p-3 alert-dark">
    <div class="mb-3 form-group">
        <label asp-for="customerInfo.CustomerName"></label>
        <input asp-for="customerInfo.CustomerName" class="form-control" value=""> 
        <span asp-validation-for="customerInfo.CustomerName"></span>
    </div>

      <div class="mb-3 form-group">
        <label asp-for="customerInfo.Email"></label>
        <input asp-for="customerInfo.Email" class="form-control" value=""> 
        <span asp-validation-for="customerInfo.Email"></span>
    </div>

      <div class="mb-3 form-group">
        <label asp-for="customerInfo.YearOfBirth"></label>
        <input asp-for="customerInfo.YearOfBirth" class="form-control" value=""> 
        <span asp-validation-for="customerInfo.YearOfBirth"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Gửi thông tin</button>
    </div>
</form>

@if (Model.customerInfo != null)
{
    <div class="m-2 p-3 alert alert-dark">
    <p>Thông tin User</p>
    <ul>
        <li>Tên khách: @Model.customerInfo.CustomerName</li>
        <li>Email: @Model.customerInfo.Email</li>
        <li>Ngày sinh: @Model.customerInfo.YearOfBirth</li>
    </ul>
    </div> 
}

<p>@Model.thongbao</p>